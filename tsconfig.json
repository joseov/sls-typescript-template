{
	"compilerOptions": {
		"preserveConstEnums": true,
		"strictNullChecks": true,
		"inlineSources": true,
		"inlineSourceMap": true,
		"sourceRoot": "/",
		"rootDir": "./src",
		"outDir": ".build",
		"target": "es2017",
		"module": "commonjs",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"lib": ["es2017"],
		"resolveJsonModule": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"allowJs": true
	},
	"include": ["./**/*.ts"],
	"exclude": ["node_modules/**/*", ".serverless/**/*", ".vscode/**/*", "tests", "**/*.test.ts"]
}
